			Select SIMOperator
				Case "41401", "41405", "41406" : sCode = "*124#"' MPT, Ooredoo, Telenor
				Case "41404" : sCode = "*162"' MPT CDMA
				Case Else : sCode = "*123#"' MECTel
			End Select
		Case 1
			Select SIMOperator
