				Case "41405" : sPhoneNumber = "2230" : sSMSBody = "b"' Ooredoo
				Case "41406" : sCode = "*124*1#"' Telenor
				Case Else : sPhoneNumber = "233" : sSMSBody = "BAL"' MECTel
			End Select
	End Select
	If sCode = "" Then
		ps.Send(sPhoneNumber, sSMSBody)
